<h1 class="text-center">Australian Recipe Converter </h1>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 text-center">
      <div class="new-post">
        {{textarea value=recipe cols="50" rows="10" placeholder="Paste in your recipe here"}}
        <button class="btn btn-default" {{action 'convertRecipe' recipe}}>Convert</button>
      </div>
    </div>

    <div class="col-sm-6 text-center">
      <div class="new-post">
        {{textarea value=recipe cols="50" rows="10"}}
      </div>
    </div>
</div>


</div>
<!-- end container-fluid -->


{{#each model as |recipe|}}
  <div class="new-post">
    <h1>{{recipe.title}}</h1>
    <p>{{recipe.body}}</p>
    <p>- {{recipe.author}}</p>
    <button class="pull-right btn btn-default" {{action 'deletePost' recipe}}>Delete</button>
  </div>
{{/each}}
